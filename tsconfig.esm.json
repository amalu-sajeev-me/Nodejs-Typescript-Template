{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
  },
  "include": [
    "bin/**/*.ts",
    "src/**/*.ts"
  ]
}